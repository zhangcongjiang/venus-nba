	fg3 int2 NULL,
	fta int2 NULL,
	ft int2 NULL,
	stl int2 NULL,
	blk int2 NULL,
	tov int2 NULL,
	triple int2 NULL,
	salary int4 NULL,
	href varchar(64) NULL,
	CONSTRAINT player_regular_total_season_pkey PRIMARY KEY (id)
);

